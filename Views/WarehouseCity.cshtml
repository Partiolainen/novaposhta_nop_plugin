@model Nop.Plugin.Shipping.NovaPoshta.Models.NovaPoshtaConfigurationSettingsModel.WarehouseAvailability

<style>
    .np-warehouse-city {
        background-color: #d3deee; 
        border: 1px solid darkblue; 
        border-radius: 3px; 
        width: 400px; 
        padding: 5px; 
        margin-bottom: 10px;
        box-shadow: 3px 3px 5px rgba(0,0,0,0.3);
    }
</style>

<div class="np-warehouse-city">
    <div class="row">
        <div class="col-md-6">
            Название:
        </div>
        <div class="col-md-6">
            @Model.Warehouse.Name
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            Город(индекс):
        </div>
        <div class="col-md-6">
            @Model.Address.City (@Model.Address.ZipPostalCode)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            Склады Новой почты:
        </div>
        <div class="col-md-6">
            @Model.NovaPoshtaWarehousesCount
        </div>
    </div>
    
    <div style="font-size: 18px">
        @if (Model.IsAvailable)
        {
            <span class="badge badge-success">Может использоваться для расчётов доставки</span>
        }
        else
        {
            <span class="badge badge-danger">Не может использоваться для расчётов доставки</span>
        }
    </div>
    
    <hr style="margin: 3px 10px"/>
    <div style="display: flex; justify-content: flex-end">
        <a class="btn btn-sm btn-outline-primary" href="/Admin/Shipping/EditWarehouse/@Model.Warehouse.Id">Параметры склада</a>
    </div>
    

</div>
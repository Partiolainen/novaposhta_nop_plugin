@model Nop.Core.Domain.Common.Address
@using Nop.Plugin.Shipping.NovaPoshta.Services
@inject INovaPoshtaService _novaPoshtaService

<div >
    <select class="form-control form-control-sm" id="nova-poshta-warehouses-select">
        @foreach (var warehouse in await _novaPoshtaService.GetWarehousesByAddress(Model))
        {
            <option value="@warehouse.Ref">@warehouse.Description</option>
        }
    </select>
</div>